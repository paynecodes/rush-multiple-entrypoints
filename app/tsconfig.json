{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "types": [],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2015",
    "skipLibCheck": true, // Skip type checking of declaration files. Enabling this setting is recommended. (For now)
    "lib": [
      "ES2015",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}